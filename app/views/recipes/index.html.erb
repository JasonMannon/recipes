

<h1>Recipes</h1>

<ul>
  <% @recipes.each do |recipe| %>
    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.rating%>: <%= recipe.name %></a></li>
  <% end %>
</ul>

<p><a href="/recipes/new">Create a new recipe</a></p>
<p><a href="/tags/new">Add a new tag</a></p>
<p><a href="/tags/">Go to tag list</a></p>
<p><a href="/">Show all recipes</a></p>

<form action="/recipes" method="get">
  <label for="search">Search</label>
  <input id="search" name="search" type="text">
  <button class="btn btn-success">Search</button>
</form>

